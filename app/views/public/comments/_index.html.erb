<h4 class="mb-3">コメント (<%= post.comments.recent_comment.count %>件)</h4>
<% post.comments.recent_comment.each do |comment| %>
  <div class="row my-2">
    <div class="col-1">
    <%= link_to member_path(comment.member) do %>
      <%= image_tag comment.member.get_profile_image(40, 40), class: "rounded-circle profile-image-small" %>
    <% end %>
    </div>
    <div class="col-11">
    <%= comment.member.name %><br/>
    <%= comment.comment %>
    <% if comment.member == current_member %>
      <%= link_to "削除", post_comment_path(comment.post, comment), method: :delete, remote: true, class: "btn btn-sm btn-danger" %>
    <% end %>
    </div>
  </div>
<% end %>