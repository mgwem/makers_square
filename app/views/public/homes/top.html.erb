<div class="top_image">
  <%= image_tag 'logo-02.png', class: "top_logo" %>
</div>
<div class="container mb-5">
  <div class="row">
    <!-- 作品表示 -->
    <div class="col-md-8 mt-5">
      <h4 class="text-success">New!</h4>
      <div class="row mb-3">
        <% @posts.each do |post| %>
          <div class="col-lg-4 col-sm-6 mt-3">
            <div id ="post_<%= post.id %>" class="card h-100">
              <div class="card-image">
                <%= link_to member_post_path(post.member , post) do %>
                  <%= image_tag post.get_post_image(350, 350), class: "w-100 card-image" %>
                <% end %>
                <% if member_signed_in? %>
                  <div class="h5 index-favorite-btn d-flex align-items-center justify-content-center">
                    <%= render 'public/favorites/btn', post: post %>
                  </div>
                <% end %>
              </div>
              <div class="card-body">
                <%= link_to member_post_path(post.member , post) do %>
                  <%= post.title %>
                <% end %></br>
                <%= link_to member_path(post.member) do %>
                <span>by <%= post.member.name %></span>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="text-right">
        <%= link_to "もっと見る", posts_path %>
      </div>
    </div>
    <!-- ジャンル一覧 -->
    <div class="col-md-3 offset-md-1 mt-5">
      <table class="table">
        <tr>
          <th>ジャンル</th>
        </tr>
        <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= link_to genre_genre_search_path(genre) do %>
              <%= genre.name %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
