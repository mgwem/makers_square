<span class="relationship-btn">
  <% if member_signed_in? %>
    <% if member != current_member %>
      <% if current_member.following?(member) %>
        <%= link_to "フォローを外す", member_relationships_path(member.id), method: :delete, remote: true, class: "btn btn-sm btn-outline-success" %>
      <% else %>
        <%= link_to "フォローする", member_relationships_path(member.id), method: :post, remote: true, class: "btn btn-sm btn-success" %>
      <% end %>
    <% end %>
  <% end %>
</span>