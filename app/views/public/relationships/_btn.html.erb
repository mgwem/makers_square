<% if member_signed_in? %>
  <% if member != current_member %>
    <% if current_member.following?(member) %>
      <%= link_to "フォローを外す", member_relationships_path(member.id), method: :delete, class: "btn btn-sm btn-outline-success" %>
    <% else %>
      <%= link_to "フォローする", member_relationships_path(member.id), method: :post, class: "btn btn-sm btn-success" %>
    <% end %>
  <% end %>
<% end %>