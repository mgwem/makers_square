<% if member_signed_in? %>
  <div class="mt-3 mx-5 text-right">
    <%= form_with url: searches_search_path, method: :get, local: true do |f| %>
      <%= f.select :range, options_for_select({ "ユーザー" => "member", "作品タイトル" => "post_title", "作品説明" => "post_explanation" }) %>
      <%= f.select :method, options_for_select({ "部分一致" => "partial", "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward" }) %>
      <%= f.text_field :content %>
      <%= button_tag type: "submit", class: "btn btn-success btn-sm" do %>
        <i class="fas fa-search"></i>
      <% end %>
    <% end %>
  </div>
<% end %>