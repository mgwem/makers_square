<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <!-- ユーザー検索結果 -->
      <% if @range == 'member' %>
        <h2>ユーザー [<%= @method_ja %>]検索結果　"<%= @content %>"</h2>
        <% if @records.exists? %>
          <%= render 'public/members/index', members: @records %>
        <% else %>
         <h5 class="mt-5">該当する会員はいません</h5>
        <% end %>

      <!-- 作品タイトル・作品説明の検索結果 -->
      <% elsif @range == 'post_title' || @range == 'post_explanation' %>
        <h2><%= @range_ja %> [<%= @method_ja %>]検索結果　"<%= @content %>"</h2>
        <% if @records.exists? %>
          <%= render 'public/posts/index', posts: @records %>
        <% else %>
          <h5 class="mt-5">該当する作品はありません</h5>
        <% end %>

      <!-- タグ検索結果 -->
      <% elsif @range == 'tag' %>
        <h2>タグ [<%= @method_ja %>]検索結果　"<%= @content %>"</h2>
        <% unless @records.empty? %>
          <%= render 'public/posts/index', posts: @records %>
        <% else %>
          <h5 class="mt-5">該当する作品はありません</h5>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
