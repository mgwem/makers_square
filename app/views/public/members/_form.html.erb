<div class="form-group row">
  <%= f.label :profile_image, "ユーザー画像", class: "col-md-3 col-form-label" %>
  <%= f.file_field :profile_image, accept: "image/*", class: "col-md-5" %>
</div>
<div class="form-group row">
  <%= f.label :name, "ユーザー名", class: "col-md-3 col-form-label" %>
  <%= f.text_field :name, class: "form-control col-md-5" %>
</div>
<div class="form-group row">
  <%= f.label :email, "メールアドレス", class: "col-md-3 col-form-label" %>
  <%= f.email_field :email, class: "form-control col-md-5" %>
</div>
<div class="form-group row">
  <%= f.label :introduction, "自己紹介", class: "col-md-3 col-form-label" %>
  <%= f.text_area :introduction, rows:5, class: "form-control col-md-8" %>
</div>
<div class="form-group row">
  <%= f.label :website_info, "サイト情報", class: "col-md-3 col-form-label" %>
  <%= f.text_area :website_info, rows:5, class: "form-control col-md-8" %>
</div>