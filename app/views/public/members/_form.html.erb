<div class="form-group row mt-5">
  <div class="col-md-3">
    <%= f.label :profile_image, "ユーザー画像", class: "col-form-label" %>
  </div>
  <div class="col-md-5">
    <%= f.file_field :profile_image, accept: "image/*" %>
  </div>
</div>
<div class="form-group row">
  <div class="col-md-3">
    <div class="d-flex">
      <%= f.label :name, "ユーザー名", class: "col-form-label" %>
      <span class="text-danger">*</span>
    </div>
  </div>
  <div class="col-md-5">
    <%= f.text_field :name, class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <div class="col-md-3">
    <div class="d-flex">
      <%= f.label :email, "メールアドレス", class: "col-form-label" %>
      <span class="text-danger">*</span>
    </div>
  </div>
  <div class="col-md-5">
    <%= f.email_field :email, class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <div class="col-md-3">
    <%= f.label :introduction, "自己紹介", class: "col-form-label" %>
  </div>
  <div class="col-md-8">
    <%= f.text_area :introduction, rows:5, placeholder: "200字以内", class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <div class="col-md-3">
    <%= f.label :website_info, "サイト情報", class: "col-form-label" %>
  </div>
  <div class="col-md-8">
    <%= f.text_area :website_info, rows:5, placeholder: "販売サイト:http:example.com（400字以内）", class: "form-control" %>
  </div>
</div>