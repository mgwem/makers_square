<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h2 class="mb-4">ユーザー情報編集</h2>
      <p class="text-danger">*必須</p>
      <%= render 'layouts/errors', obj: @member %>
      <%= form_with model: @member, local: true do |f| %>
        <%= render 'form', f: f %>
        <div class="form-group text-center">
          <%= f.submit "変更保存", class: "btn btn-success px-5 mt-2" %>
        </div>
      <% end %>
      <div class="text-center mb-5">
        <%= link_to "退会する", members_unsubscribe_path, class: "btn btn-danger px-5 mt-3" %>
      </div>
      <p><%= link_to "マイページに戻る", members_my_page_path %></p>
    </div>
  </div>
</div>
