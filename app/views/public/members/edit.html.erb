<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h2 class="mb-4">ユーザ情報編集</h2>
      <%= form_with model: @member, local: true do |f| %>
        <%= render 'form', f: f %>
        <div class="form-group text-center">
          <%= f.submit "変更保存", class: "btn btn-success px-5 mt-2" %>
        </div>
      <% end %>
      <div class="text-center">
        <%= link_to "退会する", members_unsubscribe_path, class: "btn btn-danger px-5 mt-3" %>
      </div>
    </div>
  </div>
</div>
