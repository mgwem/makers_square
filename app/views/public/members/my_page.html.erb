<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h2>マイページ</h2>
      <div class="text-center mb-3">
        <%= link_to "作品管理", posts_post_management_path, class: "btn btn-success mx-3 p-4" %>
        <!-- リンク先仮 -->
        <%= link_to "材料管理", "/", class: "btn btn-info mx-3 p-4" %>
      </div>
      <div class="text-right">
        <%= link_to "自分のプロフィールを見る", member_path(@member) %>
      </div>
      <div class="my-5">
        <p>
          <span class="h4">ユーザ情報</span>
          <%= link_to "編集", edit_member_path(@member), class: "btn btn-warning text-light mx-3" %>
        </p>
        <div class="my-3">
          <%= image_tag @member.get_profile_image(60, 60) %>
        </div>
        <table class="table">
          <tr>
            <th>ユーザ名</th>
            <td>
              <%= @member.name %>
            </td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td>
              <%= @member.email %>
            </td>
          </tr>
          <tr>
            <th>紹介文</th>
            <td>
              <%= @member.introduction %>
            </td>
          </tr>
          <tr>
            <th>サイト情報</th>
            <td>
              <%= @member.website_info %>
            </td>
          </tr>
        </table>

        <div>
          <%= link_to "いいね一覧", member_favorites_path(@member) %>
        </div>

      </div>
    </div>
  </div>
</div>