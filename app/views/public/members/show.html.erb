<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="text-center mb-3">
        <%= image_tag @member.get_profile_image(100, 100), class: "rounded-circle profile-image-big" %>
      </div>
      <h5 class="text-center"><%= @member.name %></h5>
      <div class="text-center mb-4">
        <%= render 'public/relationships/btn', member: @member %>
      </div>
      <table class="table">
      <tr>
        <td>自己紹介</td>
        <td>
          <%= @member.introduction %>
        </td>
      </tr>
      <tr>
        <td>サイト情報</td>
        <td>
          <%= @member.website_info %>
        </td>
      </tr>
      <tr>
        <td>フォロー</td>
        <td>
          <%= link_to member_followings_path(@member) do %>
            <%= @member.followings.count %>
          <% end %>
        </td>
      </tr>
      <tr>
        <td>フォロワー</td>
        <td>
          <%= link_to member_followers_path(@member) do %>
            <%= @member.followers.count %>
          <% end %>
        </td>
      </tr>
    </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 mx-auto">
      <% if @posts.exists? %>
      <h5 class="mt-5">作品一覧</h5>
      <div class="mb-3">
        <% @posts.each do |post| %>
          <%= link_to member_post_path(post.member, post) do %>
            <%= image_tag post.get_post_image(150, 150) , class: "m-2" %>
          <% end %>
        <% end %>
      </div>
      <div class="text-right">
        <%= link_to "もっと見る", members_posts_path(@member) %>
      </div>
      <% else %>
        <h5 class="text-center mt-5">投稿作品はまだありません</h5>
      <% end %>
    </div>
  </div>
</div>
