<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h2>作品編集</h2>
      <p class="text-danger">*必須</p>
      <%= render 'layouts/errors', obj: @post %>

      <%= form_with model: @post, local: true do |f| %>
        <%= render 'form', f: f %>
        <div class="form-group d-flex mb-5 justify-content-center">
          <%= f.submit "変更を保存", class: "btn btn-success px-5 my-2" %>
          <% if @post.post_materials.exists? %>
            <%= link_to "材料編集", post_post_materials_path(@post), class: "btn btn-info ml-5 px-4 my-2" %>
          <% else %>
            <%= link_to "材料新規登録", new_post_post_material_path(@post), class: "btn btn-info  ml-5 px-4 my-2" %>
          <% end %>
        </div>
      <% end %>
      <div class="text-right mb-5">
        <%= link_to "作品を削除する", post_path(@post), method: :delete, "data-confirm" => "本当に削除しますか？" , class: "btn btn-danger px-4" %>
      </div>
      <p><%= link_to "作品管理画面に戻る", posts_post_management_path %></p>
    </div>
  </div>
</div>