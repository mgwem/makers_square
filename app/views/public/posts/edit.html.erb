<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h2>作品編集</h2>
      <%= form_with model: @post, local: true do |f| %>

      <%= render 'form', f: f %>

      <div class="form-group row">
        <%= f.submit "変更を保存", class: "btn btn-success px-5 offset-3" %>
        <%= link_to "削除する", post_path(@post), method: :delete, date: {confirm: "本当に消しますか?"}, class: "btn btn-danger ml-5" %>
      </div>
      <% end %>
    </div>
  </div>
</div>