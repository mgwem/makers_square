<p>
  <span class="btn btn-success mr-3"><%= post.genre.name %></span>
  <span class="h3"><%= post.title %></span>
</p>
<%= image_tag post.get_post_image(500, 500), class: "w-100" %>
<p class="mt-3">
  <span class="mr-2"><%= post.created_at.strftime('%Y/%m/%d') %></span>
  <!-- いいね機能 -->
  <% if member_signed_in? %>
    <% if post.favorited_by?(current_member) %>
      <%= link_to post_favorites_path(post), method: :delete, class: "text-danger" do %>
       <i class="fas fa-heart"></i> <%= post.favorites.count %>
      <% end %>
    <% else %>
      <%= link_to post_favorites_path(post), method: :post, class: "text-danger" do %>
       <i class="far fa-heart"></i> <%= post.favorites.count %>
      <% end %>
    <% end %>
  <% else %>
    <span class="text-danger">
      <i class="fas fa-heart"></i> <%= post.favorites.count %>
    </span>
  <% end %>
</p>
<p><%= post.explanation %></p>