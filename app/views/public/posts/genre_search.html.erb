<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 mb-5">
        <h2><%= @genre.name %> の一覧</h2>
        <% if @posts.exists? %>
          <%= render 'public/posts/index', posts: @posts %>
        <% else %>
          <h4 class="text-center mt-5">現在、"<%= @genre.name %>"の作品投稿はありません</h4>
        <% end %>
    </div>
    <!-- ジャンル一覧 -->
    <div class="col-md-3 offset-md-1 mt-5">
      <%= render 'genre_index', genres: @genres %>
    </div>
  </div>
</div>