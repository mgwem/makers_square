<div class="form-group row">
  <div class="col-md-3">
    <%= f.label :post_image, "作品画像", class: "col-form-label" %>
  </div>
  <div class="col-md-5">
    <%= f.file_field :post_image, accept: "image/*" %>
  </div>
</div>
<div class="form-group row">
  <div class="col-md-3">
    <%= f.label :title, "作品タイトル", class: "col-form-label" %>
  </div>
  <div class="col-md-6 mb-2">
    <%= f.text_field :title, placeholder: "作品タイトル", class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <div class="col-md-3">
    <%= f.label :explanation, "作品説明", class: "col-form-label" %>
  </div>
  <div class="col-md-8 mb-2">
    <%= f.text_area :explanation, rows: 8, placeholder: "作品の説明を入力してください", class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <div class="col-md-3">
    <%= f.label :genre_id, "ジャンル", class: "col-form-label" %>
  </div>
  <div class="col-md-6 mb-2">
    <%= f.collection_select(:genre_id, @genres, :id, :name, {prompt: "選択してください"}, { class: "form-control"}) %>
  </div>
</div>
<div class="form-group row">
  <div class="col-md-3">
    <%= f.label :tag_name, "タグ", class: "col-form-label" %>
  </div>
  <div class="col-md-8">
    <%= f.text_field :tag_name, value: @tag_list, placeholder: "ビーズ,アクセサリー", class: "form-control" %>
    <p>「,」を入力することで複数のタグを付けることができます</p>
  </div>
</div>
<div class="form-group row">
  <div class="col-md-3">
    <%= f.label :is_published, "公開ステータス", class: "col-form-label" %>
  </div>
  <div class="col-md-5 my-2">
    <%= f.radio_button :is_published, true, checked: true %>
    <%= f.label :is_published, "公開", value: true, class: "mr-3" %>
    <%= f.radio_button :is_published, false %>
    <%= f.label :is_published, "非公開", value: false, class: "mr-3" %>
  </div>
</div>