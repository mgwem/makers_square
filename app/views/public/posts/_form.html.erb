<div class="form-group row">
  <%= f.label :post_image, "作品画像", class: "col-md-3 col-form-label" %>
  <%= f.file_field :post_image, accept: "image/*", class: "col-md-5" %>
</div>
<div class="form-group row">
  <%= f.label :title, "作品タイトル", class: "col-md-3 col-form-label" %>
  <%= f.text_field :title, placeholder: "作品タイトル", class: "col-md-5 form-control" %>
</div>
<div class="form-group row">
  <%= f.label :explanation, "作品説明", class: "col-md-3 col-form-label" %>
  <%= f.text_area :explanation, rows: 8, placeholder: "作品の説明を入力してください", class: "col-md-7 form-control" %>
</div>
<div class="form-group row">
  <%= f.label :genre_id, "ジャンル", class: "col-md-3 col-form-label" %>
  <%= f.collection_select(:genre_id, @genres, :id, :name, {prompt: "選択してください"}, { class: "col-md-5 form-control"}) %>
</div>
<div class="form-group row">
  <%= f.label :tag_name, "タグ", class: "col-md-3 col-form-label" %>
  <div class="col-md-5">
    <p>「,」を入力することで複数のタグを付けることができます</p>
    <%= f.text_field :tag_name, value: @tag_list, class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <%= f.label :is_published, "公開ステータス", class: "col-md-3 col-form-label" %>
  <div class="col-md-5 my-2">
    <%= f.radio_button :is_published, true, checked: true %>
    <%= f.label :is_published, "公開", value: true, class: "mr-3" %>
    <%= f.radio_button :is_published, false %>
    <%= f.label :is_published, "非公開", value: false, class: "mr-3" %>
  </div>
</div>