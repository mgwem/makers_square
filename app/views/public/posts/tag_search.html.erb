<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 mx-auto">
        <h2>#<%= @tag.tag_name %> の一覧</h2>
        <% if @posts.exists? %>
          <%= render 'public/posts/index', posts: @posts %>
        <% else %>
          <h5 class="text-center mt-5">#<%= @tag.tag_name %> でタグ付けされた作品はありません</h5>
        <% end %>
    </div>
  </div>
</div>