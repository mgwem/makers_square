<div class="container mt-5">
  <div class="row">
    <!-- 作品詳細 -->
    <div class="col-md-6 offset-md-1">
      <p>
        <span class="mr-3 h3">< <%= @post.genre.name %> ></span>
        <span class="h3"><%= @post.title %></span>
      </p>
      <%= render 'public/posts/info', post: @post %>

      <!-- タグ表示 -->
      <div class= "mb-4 mt-5">
        <% @post_tags.each do |tag| %>
          <span class="pr-2">#<%= tag.tag_name %></span>
        <% end %>
      </div>

      <!-- 使用材料表示 -->
      <%= render 'public/post_materials/index', materials: @materials %>

      <%= link_to "編集する", edit_admin_post_path(@post), class: "btn btn-warning text-white btn-block mt-4" %>

      <!-- コメント表示 -->
      <div class="mt-5">
        <h5>コメント (<%= @post.comments.count %>件)</h5>
        <% @post.comments.each do |comment| %>
          <p>
            <%= link_to member_path(comment.member) do %>
              <%= image_tag comment.member.get_profile_image(40, 40), class: "rounded-circle" %>
            <% end %>
            <%= comment.comment %>
            <%= link_to "削除", admin_post_comment_path(comment.post, comment), method: :delete, class: "btn btn-sm btn-danger" %>
          </p>
        <% end %>
      </div>

    </div>

    <!-- ステータス -->
    <div class="col-md-4 ml-5 mt-5">
      <div class="text-center mb-3">
        <%= image_tag @post.member.get_profile_image(70, 70), class: "rounded-circle" %>
      </div>
      <%= link_to admin_member_path(@post.member) do %>
        <h5 class="text-center mb-5"><%= @post.member.name %></h5>
      <% end %>
      <table class="table">
        <tr>
          <th>公開ステータス</th>
          <td>
            <% if @post.is_published == true %>
              <span class="text-success">公開</span>
            <% elsif @post.is_published  == false %>
              <span class="text-danger">非公開</span>
            <% end %>
          </td>
        </tr>
        <tr>
          <th>作品ステータス</th>
          <td>
            <% if @post.is_hidden == true %>
              <span class="text-danger">無効</span>
            <% elsif @post.is_hidden  == false %>
              <span class="text-success">有効</span>
            <% end %>
          </td>
        </tr>
      </table>
    </div>

  </div>
</div>