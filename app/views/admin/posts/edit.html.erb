<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h2>作品編集</h2>
      <%= form_with model: [:admin, @post], local: true do |f| %>

      <%= render 'public/posts/form', f: f %>

      <div class="form-group row">
        <%= f.label :is_hidden, "作品ステータス", class: "col-md-3 col-form-label" %>
        <div class="col-md-5 my-2">
          <%= f.radio_button :is_hidden, false %>
          <%= f.label :is_hidden, "有効", value: false, class: "mr-3" %>
          <%= f.radio_button :is_hidden, true %>
          <%= f.label :is_hidden, "無効", value: true, class: "mr-3" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.submit "変更を保存", class: "btn btn-success px-5 offset-3" %>
        <%= link_to "削除する", admin_post_path(@post), method: :delete, class: "btn btn-danger ml-5" %>
      </div>
      <% end %>
    </div>
  </div>
</div>