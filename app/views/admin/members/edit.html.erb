<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h2 class="mb-4">ユーザー情報編集</h2>
      <%= render 'layouts/errors', obj: @member %>
      <%= form_with model: [:admin, @member], local: true do |f| %>
        <%= render 'public/members/form', f: f %>
        <div class="form-group row">
          <%= f.label :is_deleted, "会員ステータス", class: "col-md-3 col-form-label" %>
          <div class="col-md-5 my-2">
            <%= f.radio_button :is_deleted, false %>
            <%= f.label :is_deleted, "利用中", value: false, class: "mr-3" %>
            <%= f.radio_button :is_deleted, true %>
            <%= f.label :is_deleted, "退会済み", value: true %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :is_void, "管理ステータス", class: "col-md-3 col-form-label" %>
          <div class="col-md-5 my-2">
            <%= f.radio_button :is_void, false %>
            <%= f.label :is_void, "有効", value: false, class: "mr-3" %>
            <%= f.radio_button :is_void, true %>
            <%= f.label :is_void, "無効", value: true %>
          </div>
        </div>
        <div class="form-group text-center mb-5">
          <%= f.submit "変更保存", class: "btn btn-success px-5 mt-2" %>
        </div>
      <% end %>
      <p><%= link_to "会員詳細画面に戻る", admin_member_path(@member) %></p>
    </div>
  </div>
</div>