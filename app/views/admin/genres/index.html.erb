<div class="container mt-5">
  <div class="row">
    <div class="col-md-9 mx-auto">
      <h2>ジャンル一覧・追加</h2>
      <%= render 'layouts/errors', obj: @genre %>
      <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
      <div class="form-group row my-5">
          <%= f.label :name, "ジャンル名", class: "col-md-3 col-form-label mb-3" %>
          <%= f.text_field :name, placeholder: "ジャンル名", class: "col-md-4 form-control mb-3 mx-2" %>
          <%= f.submit "新規作成", class: "btn btn-success col-md-3 ml-3 mb-3 mx-2" %>
      </div>
      <% end %>

      <div class="row">
        <div class="col-md-9 mx-auto">
          <table class="table">
            <tr>
              <th>ジャンル</th>
              <th></th>
              <th></th>
            </tr>
            <% @genres.each do |genre| %>
              <tr>
                <td>
                  <%= genre.name %>
                </td>
                <td>
                  <%= link_to "編集", edit_admin_genre_path(genre), class: "btn btn-warning text-light" %>
                </td>
                <td>
                  <%= link_to "削除", admin_genre_path(genre), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
                </td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>