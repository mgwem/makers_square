<div class="container mt-5">
  <div class="row">
    <div class="col-md-9 mx-auto">
      <h2>ジャンル編集</h2>
      <%= render 'layouts/errors', obj: @genre %>
      <%= form_with model: @genre, url: admin_genre_path, method: :patch, local: true do |f| %>
      <div class="form-group row my-5">
          <%= f.label :name, "ジャンル名", class: "col-md-3 col-form-label" %>
          <%= f.text_field :name, class: "col-md-4 form-control" %>
          <%= f.submit "変更を保存", class: "btn btn-success col-md-3 ml-3" %>
      </div>
      <% end %>
      <%= link_to "ジャンル一覧に戻る", admin_genres_path %>
    </div>
  </div>
</div>