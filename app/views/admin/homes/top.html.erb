<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h2>ユーザ 一覧</h2>
      <table class="table">
        <tr>
          <th>ユーザーID</th>
          <th></th>
          <th>ユーザー名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
        <% @members.each do |member| %>
          <tr>
            <td>
              <%= member.id %>
            </td>
            <td>
              <%= image_tag member.get_profile_image(40, 40) %>
            </td>
            <td>
              <%= link_to admin_member_path(member) do %>
                <%= member.name %>
              <% end %>
            </td>
            <td>
              <%= member.email %>
            </td>
            <td>
              <% if member.is_void == true %>
                <span class="text-danger">無効</span>
              <% elsif member.is_void == false %>
                <span class="text-success">有効</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
      <%= paginate @members %>
    </div>
  </div>
</div>