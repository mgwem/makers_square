<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h2>コメント一覧</h2>
      <table class="table">
        <tr>
          <th>投稿日時</th>
          <th>ユーザー名</th>
          <th>コメント</th>
          <th>公開ステータス</th>
          <th></th>
        </tr>
        <% @comments.each do |comment| %>
          <tr>
            <td>
              <%= comment.created_at.strftime('%Y/%m/%d') %>
            </td>
            <td>
              <%= comment.member.name %>
            </td>
            <td>
              <%= link_to admin_post_path(comment.post) do %>
                <%= comment.comment %>
              <% end %>
            </td>
            <td>
              <% if comment.is_hidden == true %>
                <span class="text-danger">非公開</span>
              <% elsif comment.is_hidden == false %>
                <span class="text-success">公開</span>
              <% end %>
            </td>
            <td>
              <%= link_to "削除", admin_post_comment_path(comment.post, comment), method: :delete, class: "btn btn-sm btn-danger" %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>